{
    "source": {
        "include": ["public/js", "routes", "server.js", "api.js"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": ["plugins/markdown"],
    "opts": {
        "destination": "./docs/api",
        "recurse": true,
        "readme": "./README.md",
        "template": "templates/default"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "default": {
            "outputSourceFiles": true,
            "includeDate": false
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}
